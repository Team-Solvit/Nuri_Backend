scalar DateTime
scalar UUID

type Query {
    readMessages(room_id: UUID!): [ChatRecord]
}

type Sender {
    name: String!
    profile: String!
}

type ReplyChat {
    chatId: String!
    contents: String!
    name: String!
}

type ChatRecord {
    id: UUID!

    roomId: UUID!
    sender: Sender!

    createdAt: DateTime!

    contents: String!
    replyChat: ReplyChat
}
